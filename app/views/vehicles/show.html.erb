<h1 class="text-center my-4">Vehicle Details</h1>

<div class="card">
  <div class="card-body">
    <p><strong>Mark:</strong> <%= @vehicle.mark %></p>
    <p><strong>Model:</strong> <%= @vehicle.model %></p>
    <p><strong>Year:</strong> <%= @vehicle.year %></p>
    <p><strong>Color:</strong> <%= @vehicle.color %></p>
    <p><strong>Is Selling:</strong> <%= @vehicle.is_selling ? 'Yes' : 'No' %></p>
  </div>
</div>

<div class="d-flex justify-content-between mt-4">
  <%= link_to 'Edit', edit_vehicle_path(@vehicle), class: 'btn btn-warning' %>
  <%= link_to 'Back', vehicles_path, class: 'btn btn-secondary' %>
</div>
