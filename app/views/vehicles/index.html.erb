<h1 class="text-center my-4">Vehicles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Mark</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Is Selling</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.mark %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.is_selling ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', vehicle, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= link_to 'New Vehicle', new_vehicle_path, class: 'btn btn-success' %>
</div>
